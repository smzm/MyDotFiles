;wm-restack = bspwm
;wm-restack = i3

override-redirect = false
enable-ipc = true






[module/i3]

; i3 ==================================== Basic settings

type = internal/i3

; This will split the workspace name on ':'
; --> Default: false
;strip-wsnumbers = true

; Sort the workspaces by index instead of the default
; sorting that groups the workspaces by output
; --> Default: false
index-sort = true


; Create click handler used to focus workspace
; --> Default: true
;enable-click = false

; Create scroll handlers used to cycle workspaces
; --> Default: true
;enable-scroll = false


; Wrap around when reaching the first/last workspace
; --> Default: true
;wrapping-scroll = false

; Set the scroll cycle direction 
; --> Default: true
;reverse-scroll = false

; Use fuzzy (partial) matching on labels when assigning 
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces 
; containing 'code' in the label
; --> Default: false
fuzzy-match = true



; i3 ==================================== Additional formatting

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
;ws-icon-0 = 1;
;ws-icon-1 = 2;♛
;ws-icon-2 = 3;♜
;ws-icon-3 = 4;♝
;ws-icon-4 = 5;♞
;ws-icon-default = ♟
; NOTE: You cannot skip icons, e.g. to get a ws-icon-6
; you must also define a ws-icon-5.


; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2

; ================== Background of $mod+0
label-mode-background = #000000   
label-mode-foreground = #ffffff
;label-mode-background = #001691

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %name%
label-focused-foreground = ${colors.foreground-focused-light}
label-focused-background = ${colors.background-focused-light}
label-focused-underline = #ffffff
label-focused-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %name%
label-unfocused-padding = 4
label-unfocused-background = ${colors.background-light}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %name%
label-visible-underline = #ffffff
label-visible-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %name%
label-urgent-foreground = #d83838
label-urgent-background = ${colors.third-background-light}
label-urgent-padding = 4


; Separator in between workspaces
;label-separator = |
;label-separator-padding = 2
;label-separator-foreground = ${colors.second-background-light}



