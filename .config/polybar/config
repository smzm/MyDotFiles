[bar/example]
monitor = ${env:MONITOR}
;monitor = ${env:MONITOR:HDMI-0}
;MONITOR=$(polybar -m|tail -1|sed -e 's/:.*$//g')
width = 100%
height = 25
offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = true 

background = ${colors.background-light}
foreground = ${colors.foreground-light}

line-size = 0
line-color = #8e8e8e 

border-size = 0 0 0 0 0 0 0 0 0 
border-color = #000000

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = InconsolataLGC Nerd Font:pixelsize=10:antialias=true;1
font-1 = SF Mono:style=Solid:pixelsize=12:antialias=true;3
font-2 = FontAwesome5Brands:style=Solid:pixelsize=12:antialias=true;3

modules-left = i3 
modules-center = date weather 
modules-right = pulseaudio xkeyboard powermenu 
    
tray-position = right
tray-padding = 11
;tray-transparent = true
tray-offset-y = 22
tray-offset-x = -10
tray-maxsize = 18
tray-detached = true
