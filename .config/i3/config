#====== screenshots bindings
# Desktop screenshot ==> PrintScreen
bindsym --release Print exec "scrot ~/screenshots/$(date --iso-8601='seconds').png -m -e 'xclip -selection c -t image/png < $f'"
# Choose window ==> Alt + PrintScreen
bindsym --release Mod1+Sys_Req exec "import -window `xwininfo | awk '/.*Window id:.*/ {print $4}'` ~/screenshots/$(date --iso-8601='seconds').png"
# Selection screenshot ==> Shift + PrintScreen
bindsym --release Shift+Print exec "scrot ~/screenshots/$(date --iso-8601='seconds').png -s -e 'xclip -selection c -t image/png < $f'"

# start
exec gnome-terminal
exec google-chrome-stable



