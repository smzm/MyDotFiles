# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd



## --------- Terminal Emulator ##
# terminal emulator
super + Return
	kitty

super + shift + Return
	bspc rule -a \* -o state=floating rectangle=1400x1000+32+108 && $@ | kitty




## --------- Rofi ##
# program launcher
super + @space
	rofi -show drun -dpi 192

# Rofi Command Runner
super + shift + space
	rofi -show run -dpi 192




## --------- Applications ##

# GUI Apps
super + {z,x}
    {kitty,firefox}



## --------- System ##
# Volume control
alt + shift + {Down, Up}
	pulseaudio-ctl{ down 5, up 5}



### --------- bspwm ##


# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}




# Send the window to another edge of the screen
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}


# expand/contract a window 
super + alt + {h,j,k,l}
  bspc node -z {left -20 0 || bspc node -z right -20 0, \
                bottom 0 20 || bspc node -z top 0 20,\
				top 0 -20 || bspc node -z bottom 0 -20,\
				right 20 0 || bspc node -z left 20 0}


# Send focused window to another workspace or switch workspace
super + {_,shift + }{1-9}
	bspc {desktop -f,node -d} '^{1-9}'





# Alternate between the tiled and monocle layout
super + m
 	bspc desktop -l next


# Alternate Fullscreen
super + n
    bspc node -t "~"fullscreen
 
# Alternate beetwen floating
super + f
    bspc node -t "~"floating

# Alternate beetwen tiled
super + t
    bspc node -t "~"tiled



# send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local
 

# swap the current node and the biggest window
super + y
	bspc node -s biggest.window
 


# state/flags
 
# set the node flags
super + ctrl + {m,x,y,z}
 	bspc node -g {marked,locked,sticky,private}
 


# # focus/swap
 
# focus the node for the given path jump
#super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}
 	
 
# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last
 
# # focus the older or newer node in the focus history
# super + {o,i}
# 	bspc wm -h off; \
# 	bspc node {older,newer} -f; \
# 	bspc wm -h on


# focus or send to the given desktop
super + {_,shift + }{1-9,0}
 	bspc {desktop -f,node -d} '^{1-9,10}'
 

# # preselect

# preselect the direction
super + ctrl + {h,j,k,l,c}
 	bspc node -p {west,south,north,east,cancel}
 
# preselect the ratio
super + ctrl + {1-9}
 	bspc node -o 0.{1-9}
 


# move/resize
 
# move a floating window
super + {Left,Down,Up,Right}
 	bspc node -v {-20 0,0 20,0 -20,20 0}
 
 
